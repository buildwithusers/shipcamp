{
  "name": "shipcamp",
  "version": "0.0.1",
  "description": "",
  "main": "docs/index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prebuild": "rm -rf ./docs",
    "build": "NODE_ENV=production npm run build:css && npm-run-all copy:*",
    "build:css": "npx tailwindcss-cli@latest build ./src/main.css -o ./docs/main.css",
    "copy:html": "cp ./src/index.html ./docs/index.html",
    "watch:css": "onchange 'src/main.css' -- npm run build:css",
    "server": "browser-sync start --server 'src' --ss 'docs' --files 'src/**/*.html' 'docs/*.css'",
    "preserve": "rm -rf ./docs && npm run build:css",
    "serve": "npm-run-all --parallel server watch:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buildwithusers/shipcamp.git"
  },
  "author": "Shipright BV",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/buildwithusers/shipcamp/issues"
  },
  "homepage": "https://github.com/buildwithusers/shipcamp#readme",
  "devDependencies": {
    "browser-sync": "^2.26.14",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0"
  }
}
